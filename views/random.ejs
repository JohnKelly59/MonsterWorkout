<%- include("partials/header.ejs") -%>
<link href="/styles.css" rel="stylesheet" />
<body class="h-100 text-center text-danger bg-dark">
  <div class="search">
    <div class="form-box">
      <h1>Search Workout</h1>
      <form action="/random" method="post">
        <div>
          <select
            id="equip"
            name="bodyPart"
            class="form-control-lg"
            style="width: 100%"
            required
          >
            <option disabled value="">Body Part</option>
            <option value="back">Back</option>
            <option value="cardio">Cardio</option>
            <option value="chest">Chest</option>
            <option value="arms">Arms</option>
            <option value="legs">Legs</option>
            <option value="shoulders">Shoulders</option>
          </select>
        </div>
        <div>
          <select
            name="num"
            class="custom-select mr-sm-2"
            id="inlineFormCustomSelect"
            style="width: 100%"
            required
          >
            <option disabled selected>How many exercises?</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
            <option value="10">10</option>
            <option value="11">11</option>
            <option value="12">12</option>
            <option value="13">13</option>
            <option value="14">14</option>
            <option value="15">15</option>
          </select>
        </div>
        <button class="w-100 btn btn-lg btn-danger text-dark" type="submit">
          Generate Workout
        </button>
      </form>
    </div>
  </div>
</body>
